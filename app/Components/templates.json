{

  "component_header": [

    {
      "element":"label",
      "attributes": {
        "class":"label",
        "for":"component_%component%",
        "data-locale":"COMPONENT_%COMPONENT%_LABEL"
      }
    },

    {
      "element":"div",
      "attributes": {
        "class":"info-box"
      },
      "children": [

        {
          "element":"span",
          "attributes": {
            "class":"info-hover"
          }
        },

        {
          "element":"span",
          "attributes": {
            "class":"info-text",
            "data-locale":"COMPONENT_%COMPONENT%_INFO"
          }
        }

      ]
    }

  ],

  "component_header_big": [

    {
      "element":"label",
      "attributes": {
        "class":"big-label",
        "for":"component_%component%",
        "data-locale":"COMPONENT_%COMPONENT%_LABEL"
      }
    },

    {
      "element":"div",
      "attributes": {
        "class":"info-box tall-info"
      },
      "children": [

        {
          "element":"span",
          "attributes": {
            "class":"info-hover"
          }
        },

        {
          "element":"span",
          "attributes": {
            "class":"info-text",
            "data-locale":"COMPONENT_%COMPONENT%_INFO"
          }
        }

      ]
    }

  ],

  "component_inline_header": [

    {
      "element":"span",
      "attributes": {
        "class":"component-inline-icon icon-%component%"
      }
    },

    {
      "element":"label",
      "attributes": {
        "class":"component-inline-label",
        "data-locale":"ADD_%COMPONENT%"
      }
    },

    {
      "element":"span",
      "attributes": {
        "class":"component-inline-disable icon-disable"
      }
    },

    {
      "element":"span",
      "attributes": {
        "class":"component-inline-remove icon-remove"
      }
    },

    {
      "element":"span",
      "attributes": {
        "class":"component-inline-drag icon-drag"
      }
    }

  ]

}