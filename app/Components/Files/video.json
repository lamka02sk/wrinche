{

  "name":"video",
  "active":true,
  "defaultElements":true,
  "header":"component_inline_header",

  "prototype": {

    "video": {
      "type":"string",
      "validate": {
        "source":"validator",
        "method":"isVideo"
      }
    }

  },

  "template": [

    {
      "element":"button",
      "attributes": {
        "class":"button add-attachment icon-video",
        "data-content":"video",
        "data-locale":"COMPONENT_CONTENT_VIDEO_ADD"
      }
    },

    {
      "element":"template",
      "attributes": {
        "id":"template_component_content_video_item"
      },
      "children": [

        {
          "element":"div",
          "attributes": {
            "class":"video-item",
            "data-path":""
          },
          "children": [

            {
              "element":"p",
              "attributes": {
                "class":"item-name"
              }
            },

            {
              "element":"span",
              "attributes": {
                "class":"item-remove"
              }
            },

            {
              "element":"video",
              "attributes": {
                "class":"item-player",
                "src":""
              }
            }

          ]
        }

      ]
    }

  ]

}