{

  "name":"revisions",
  "active":true,
  "defaultElements":true,
  "header":"component_header",

  "prototype": {

    "revision": {
      "type":"string"
    }

  },

  "template": [

    {
      "element":"textarea",
      "label":"component_revisions",
      "attributes": {
        "class":"small-textarea",
        "name":"component_revisions",
        "data-placeholder":"COMPONENT_REVISIONS_NEW_PLACEHOLDER"
      }
    },

    {
      "element":"template",
      "attributes": {
        "id":"template_component_revisions_item"
      },
      "children": [

        {
          "element":"div",
          "attributes": {
            "class":"revisions-revision"
          },
          "children": [

            {
              "element":"span",
              "attributes": {
                "class":"revision-datetime"
              }
            },

            {
              "element":"p",
              "attributes": {
                "class":"revision-content"
              }
            }

          ]
        }

      ]
    }

  ]

}