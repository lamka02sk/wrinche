{

  "name":"revisions",
  "active":true,
  "defaultElements":true,
  "header":"component_header",

  "data": {

    "revision": [
      "revisions",
      false
    ]

  },

  "prototype": {

    "revision": {
      "type":"string"
    }

  },

  "template": [

    {
      "element":"div",
      "attributes": {
        "class":"revisions-list"
      }
    },

    {
      "element":"div",
      "attributes": {
        "class":"input-box"
      },
      "children": [

        {
          "element":"div",
          "attributes": {
            "class":"counter fuck-chrome revision-counter",
            "data-input":"textarea",
            "data-length":"250"
          }
        },

        {
          "element":"textarea",
          "label":"component_revisions",
          "attributes": {
            "class":"small-textarea",
            "name":"component_revisions",
            "data-placeholder":"COMPONENT_REVISIONS_NEW_PLACEHOLDER"
          }
        }

      ]
    },

    {
      "element":"template",
      "attributes": {
        "id":"template_component_revisions_item"
      },
      "children": [

        {
          "element":"div",
          "attributes": {
            "class":"revisions-revision"
          },
          "children": [

            {
              "element":"span",
              "attributes": {
                "class":"revision-datetime"
              }
            },

            {
              "element":"p",
              "attributes": {
                "class":"revision-content"
              }
            }

          ]
        }

      ]
    }

  ]

}