{

  "name":"planner",
  "active":true,
  "defaultElements":true,
  "header":"component_header",

  "prototype": {

    "planner": {
      "type":"boolean",

      "if": [
        {
          "equals":false,
          "prototype": {

            "planner_date": {
              "type":"string",
              "validate": {
                "source":"validate",
                "method":"isFutureTimestamp"
              }
            },

            "planner_expiry": {
              "type":"string",
              "validate": {
                "source":"validate",
                "method":"isFutureTimestamp"
              }
            },

            "planner_notify": {
              "type":"boolean",

              "if": [
                {
                  "equals":true,
                  "prototype": {

                    "planner_notify_email": {
                      "type":"boolean"
                    }

                  }
                }
              ]
            }

          }
        }
      ]
    }

  },

  "template": [

    {
      "element":"label",
      "attributes": {
        "class":"small-label",
        "data-locale":"COMPONENT_PLANNER_PUBLISH_LABEL"
      }
    },

    {
      "element":"label",
      "attributes": {
        "class":"label checkbox-click",
        "data-locale":"COMPONENT_PLANNER_PUBLISH_AUTO_LABEL",
        "for":"component_planner_publish"
      }
    },

    {
      "element":"input>",
      "label":"component_planner_publish",
      "attributes": {
        "class":"input",
        "type":"checkbox",
        "value":"component_planner_publish",
        "name":"component_planner_publish",
        "checked":"true"
      }
    },

    {
      "element":"div",
      "attributes": {
        "class":"component_planner_publish_custom"
      },
      "children": [

        {
          "element":"input>",
          "attributes": {
            "class":"input",
            "name":"component_planner_publish_date",
            "type":"date",
            "data-placeholder":"COMPONENT_PLANNER_PUBLISH_DATE_PLACEHOLDER"
          }
        },

        {
          "element":"input>",
          "attributes": {
            "class":"input",
            "name":"component_planner_publish_date",
            "type":"time",
            "data-placeholder":"COMPONENT_PLANNER_PUBLISH_TIME_PLACEHOLDER"
          }
        },

        {
          "element":"label",
          "attributes": {
            "class":"small-label",
            "data-locale":"COMPONENT_PLANNER_EXPIRY_LABEL"
          }
        },

        {
          "element":"input>",
          "attributes": {
            "class":"input",
            "name":"component_planner_publish_expiry",
            "type":"date",
            "data-placeholder":"COMPONENT_PLANNER_EXPIRY_DATE_PLACEHOLDER"
          }
        },

        {
          "element":"input>",
          "attributes": {
            "class":"input",
            "name":"component_planner_publish_expiry",
            "type":"time",
            "data-placeholder":"COMPONENT_PLANNER_EXPIRY_TIME_PLACEHOLDER"
          }
        },

        {
          "element":"label",
          "attributes": {
            "class":"label checkbox-click",
            "for":"component_planner_notify",
            "data-locale":"COMPONENT_PLANNER_NOTIFY_ENABLE"
          }
        },

        {
          "element":"input>",
          "label":"component_planner_notify",
          "attributes": {
            "class":"input",
            "type":"checkbox",
            "name":"component_planner_notify",
            "value":"component_planner_notify"
          }
        },

        {
          "element":"div",
          "attributes": {
            "class":"component_planner_notify_email input-box hide"
          },
          "children": [

            {
              "element":"label",
              "attributes": {
                "class":"label checkbox-click hide",
                "for":"component_planner_notify_email",
                "data-locale":"COMPONENT_PLANNER_NOTIFY_E-MAIL"
              }
            },

            {
              "element":"input>",
              "label":"component_planner_notify_email",
              "attributes": {
                "class":"input",
                "type":"checkbox",
                "name":"component_planner_notify_email",
                "value":"component_planner_notify_email"
              }
            }

          ]
        }

      ]
    }

  ]

}