{

  "name":"quote",
  "active":true,
  "defaultElements":true,
  "header":"component_inline_header",

  "prototype": {

    "quote": {
      "type":"string"
    },

    "quote_author": {
      "type":"string"
    },

    "quote_position": {
      "type":"boolean",
      "range":"0,3"
    }

  },

  "template": [

    {
      "element":"label",
      "attributes": {
        "class":"small-label",
        "for":"component_inline_quote_text",
        "data-locale":"COMPONENT_CONTENT_QUOTE_TEXT_LABEL"
      }
    },

    {
      "element":"textarea",
      "label":"component_inline_quote_text",
      "attributes": {
        "class":"small-textarea",
        "name":"component_inline_quote_text",
        "data-placeholder":"COMPONENT_CONTENT_QUOTE_TEXT_PLACEHOLDER"
      }
    },

    {
      "element":"label",
      "attributes": {
        "class":"small-label",
        "for":"component_inline_quote_author",
        "data-locale":"COMPONENT_CONTENT_QUOTE_AUTHOR_LABEL"
      }
    },

    {
      "element":"input>",
      "label":"component_inline_quote_author",
      "attributes": {
        "class":"input",
        "name":"component_inline_quote_author",
        "data-placeholder":"COMPONENT_CONTENT_QUOTE_AUTHOR_PLACEHOLDER",
        "type":"text"
      }
    },

    {
      "element":"div",
      "attributes": {
        "class":"quote-position"
      },
      "children": [

        {
          "element":"span",
          "attributes": {
            "class":"position-item left-position",
            "data-position":"0",
            "data-locale":"COMPONENT_CONTENT_POSITION_LEFT"
          }
        },

        {
          "element":"span",
          "attributes": {
            "class":"position-item right-position",
            "data-position":"1",
            "data-locale":"COMPONENT_CONTENT_POSITION_RIGHT"
          }
        },

        {
          "element":"span",
          "attributes": {
            "class":"position-item full-position",
            "data-position":"2",
            "data-locale":"COMPONENT_CONTENT_POSITION_FULL"
          }
        }

      ]
    }

  ]

}