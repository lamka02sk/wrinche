{

  "name":"note",
  "active":true,
  "defaultElements":true,
  "header":"component_inline_header",

  "prototype": {

    "note": {
      "type":"string"
    },

    "note_position": {
      "type":"integer",
      "range":"0,3"
    }

  },

  "template": [

    {
      "element":"textarea",
      "label":"component_inline_note",
      "attributes": {
        "class":"small-textarea",
        "name":"component_inline_note",
        "data-placeholder":"COMPONENT_CONTENT_NOTE_PLACEHOLDER"
      }
    },

    {
      "element":"div",
      "attributes": {
        "class":"note-position"
      },
      "children": [

        {
          "element":"span",
          "attributes": {
            "class":"position-item left-position",
            "data-position":"0",
            "data-locale":"COMPONENT_CONTENT_POSITION_LEFT"
          }
        },

        {
          "element":"span",
          "attributes": {
            "class":"position-item right-position",
            "data-position":"1",
            "data-locale":"COMPONENT_CONTENT_POSITION_RIGHT"
          }
        },

        {
          "element":"span",
          "attributes": {
            "class":"position-item full-position",
            "data-position":"2",
            "data-locale":"COMPONENT_CONTENT_POSITION_FULL"
          }
        }

      ]
    }

  ]

}