{

  "name":"header_image",
  "active":true,
  "defaultElements":true,
  "header":"component_header",

  "data": {

    "header_image": [
      "articles.title_picture",
      false
    ]

  },

  "prototype": {

    "header_image": {
      "type":"string",

      "validate": {
        "source":"validator",
        "method":"isImage"
      }
    }

  },

  "template": [

    {
      "element": "div",
      "attributes": {
        "class": "input-box"
      },
      "children": [

        {
          "element": "button",
          "attributes": {
            "class": "button image_manager",
            "data-locale": "COMPONENT_HEADER-IMAGE_BUTTON",
            "data-manager": "images"
          }
        },

        {
          "element": "span",
          "attributes": {
            "class": "or",
            "data-locale": "OR"
          }
        },

        {
          "element": "input>",
          "attributes": {
            "type": "url",
            "data-placeholder": "COMPONENT_HEADER-IMAGE_INPUT",
            "class": "input",
            "name": "component_header-image"
          }
        },

        {
          "element":"span",
          "attributes": {
            "class":"field-validation margin-bottom",
            "data-locale":""
          }
        },

        {
          "element":"span",
          "attributes": {
            "class":"info-text-outside",
            "data-locale":"COMPONENT_THUMBNAIL_INPUT_INFO"
          }
        }
      ]
    },

    {
      "element":"template",
      "attributes": {
        "id":"template_component_header-image_image"
      },
      "children": [

        {
          "element":"div",
          "attributes": {
            "class":"header_image-image",
            "data-path":""
          },
          "children": [

            {
              "element":"img",
              "attributes": {
                "class":"header_image-image-content",
                "src":"",
                "alt":""
              }
            },

            {
              "element":"p",
              "attributes": {
                "class":"header_image-name"
              }
            },

            {
              "element":"span",
              "attributes": {
                "class":"header_image-remove"
              }
            }

          ]
        }

      ]
    }

  ]

}