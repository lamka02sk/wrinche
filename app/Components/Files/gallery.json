{

  "name":"gallery",
  "active":true,
  "defaultElements":true,
  "header":"component_inline_header",

  "prototype": {

    "gallery": {
      "type":"array",

      "each": {
        "type":"string",

        "validate": {
          "source":"validator",
          "method":"isImage"
        }
      }
    }

  },

  "template": [

    {
      "element":"div",
      "attributes": {
        "class":"component-element-content"
      },
      "children": [

        {
          "element":"div",
          "attributes": {
            "class":"input-box gallery-add-image"
          },
          "children": [

            {
              "element":"button",
              "attributes": {
                "class":"button inline-image_manager icon-image",
                "data-manager":"images"
              }
            },

            {
              "element":"input>",
              "attributes": {
                "type":"url",
                "data-placeholder":"COMPONENT_CONTENT_PICTURE_INPUT",
                "class":"input no-margin",
                "name":"component_inline_picture_input"
              }
            },

            {
              "element":"span",
              "attributes": {
                "class":"validate-message no-margin",
                "data-locale":""
              }
            }

          ]
        },

        {
          "element":"div",
          "attributes": {
            "class":"gallery-items no-padding"
          }
        }

      ]
    },

    {
      "element":"template",
      "attributes": {
        "id":"template_component_gallery_item"
      },
      "children": [

        {
          "element":"div",
          "attributes": {
            "class":"gallery-item",
            "data-path":""
          },
          "children": [

            {
              "element":"div",
              "attributes": {
                "class":"item-image"
              },
              "children": [

                {
                  "element":"img",
                  "attributes": {
                    "class":"item-image-content",
                    "alt":"",
                    "src":""
                  }
                }

              ]
            },

            {
              "element":"span",
              "attributes": {
                "class":"remove-gallery-item icon-trash"
              }
            }

          ]
        }

      ]
    }

  ]

}