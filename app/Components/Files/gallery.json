{

  "name":"gallery",
  "active":true,
  "defaultElements":true,
  "header":"component_inline_header",

  "prototype": {

    "gallery": {
      "type":"array",

      "each": {
        "type":"string",

        "validate": {
          "source":"validator",
          "method":"isImage"
        }
      }
    }

  },

  "template": [

    {
      "element":"span",
      "attributes": {
        "class":"gallery-add-image"
      }
    },

    {
      "element":"template",
      "attributes": {
        "id":"template_component_gallery_item"
      },
      "children": [

        {
          "element":"div",
          "attributes": {
            "class":"gallery-item",
            "data-path":""
          },
          "children": [

            {
              "element":"div",
              "attributes": {
                "class":"item-image"
              },
              "children": [

                {
                  "element":"img",
                  "attributes": {
                    "class":"item-image-content",
                    "alt":"",
                    "src":""
                  }
                }

              ]
            },

            {
              "element":"p",
              "attributes": {
                "class":"gallery-item-name"
              }
            },

            {
              "element":"span",
              "attributes": {
                "class":"remove-gallery-item"
              }
            }

          ]
        }

      ]
    }

  ]

}