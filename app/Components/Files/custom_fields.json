{

  "name":"custom_fields",
  "active":true,
  "defaultElements":true,

  "template": [
    {
      "element": "div",
      "attributes": {
        "class": "custom_fields-add-box"
      },
      "children": [

        {
          "element": "p",
          "attributes": {
            "class":"custom_fields-add-heading",
            "data-locale":"WRITE_CUSTOM-FIELDS_ADD_HEADING"
          }
        },

        {
          "element": "label",
          "attributes": {
            "for": "custom_fields-add-name",
            "class": "label-custom_fields small-label",
            "data-locale": "WRITE_CUSTOM-FIELDS_NAME"
          }
        },

        {
          "element": "label",
          "attributes": {
            "for": "custom_fields-add-value",
            "class": "label-custom_fields small-label",
            "data-locale": "WRITE_CUSTOM-FIELDS_VALUE"
          }
        },

        {
          "element": "input>",
          "label": "custom_fields-add-name",
          "attributes": {
            "class": "input-custom_fields",
            "data-placeholder": "WRITE_CUSTOM-FIELDS_NAME",
            "name": "write_custom-fields_name"
          }
        },

        {
          "element": "input>",
          "label": "custom_fields-add-value",
          "attributes": {
            "class": "input-custom_fields",
            "data-placeholder": "WRITE_CUSTOM-FIELDS_VALUE",
            "name": "write_custom-fields_value"
          }
        },

        {
          "element": "span",
          "attributes": {
            "class": "add-custom_field",
            "data-locale": "BUTTON_ADD"
          }
        }

      ]
    },

    {
      "element": "div",
      "attributes": {
        "class": "custom_fields-list"
      }
    },

    {
      "element":"template",
      "attributes": {
        "id":"template_write_custom-fields_field"
      },
      "children": [

        {
          "element": "div",
          "attributes": {
            "class": "custom_fields-list-item"
          },
          "children": [
            {
              "element": "p",
              "attributes": {
                "class": "field-item-name"
              }
            },
            {
              "element": "p",
              "attributes": {
                "class": "field-item-value"
              }
            },
            {
              "element": "span",
              "attributes": {
                "class": "remove-custom_field"
              }
            },
            {
              "element": "span",
              "attributes": {
                "class": "edit-custom_field"
              }
            }
          ]
        }

      ]
    }

  ]

}