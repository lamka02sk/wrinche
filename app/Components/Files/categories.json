{

  "name":"categories",
  "active":true,
  "defaultElements":true,
  "header":"component_header",

  "data": {

    "categories": [
      "articles_content.categories",
      "componentsHelper.parseInt&componentsHelper.createJSON|componentsHelper.decodeJSON"
    ]

  },

  "prototype": {

    "categories": {
      "type":"array",

      "each": {
        "type":"string",

        "check": {
          "source":"database",
          "table":"categories",
          "column":"id",
          "method":"default"
        }
      }
    }

  },

  "template": [

    {
      "element":"input>",
      "attributes": {
        "class":"input search-input",
        "name":"component_categories_search",
        "data-placeholder":"COMPONENT_CATEGORIES_SEARCH"
      }
    },

    {
      "element":"div",
      "attributes": {
        "class":"categories-list"
      },
      "*children_template": [

        {
          "element":"div",
          "attributes": {
            "class":"category-item",
            "data-category":"%category_id%"
          },
          "children": [

            {
              "element":"p",
              "attributes": {
                "class":"category-name"
              },
              "text":"%category_name%"
            },

            {
              "element":"span",
              "attributes": {
                "class":"add-category",
                "data-locale":"BUTTON_ADD"
              }
            },

            {
              "element":"span",
              "attributes": {
                "class":"remove-category hide",
                "data-locale":"BUTTON_ADDED"
              }
            }

          ]
        }

      ]
    },

    {
      "element":"span",
      "attributes": {
        "data-link":"sorting/categories",
        "data-locale":"COMPONENT_CATEGORIES_MANAGE",
        "data-target":"blank",
        "class":"categories-manage"
      }
    },

    {
      "element":"template",
      "attributes": {
        "id":"template_component_categories_item"
      },
      "children": [

        {
          "element":"div",
          "attributes": {
            "class":"category-item",
            "data-category":""
          },
          "children": [

            {
              "element":"p",
              "attributes": {
                "class":"category-name"
              }
            },

            {
              "element":"span",
              "attributes": {
                "class":"add-category",
                "data-locale":"BUTTON_ADD"
              }
            },

            {
              "element":"span",
              "attributes": {
                "class":"remove-category hide",
                "data-locale":"BUTTON_ADDED"
              }
            }

          ]
        }

      ]
    }

  ]

}