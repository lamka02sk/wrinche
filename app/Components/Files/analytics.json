{

  "name":"analytics",
  "active":true,
  "defaultElements":false,

  "prototype": {

    "analytics": {
      "type":"boolean",

      "if": [
        {
          "equals":true,
          "prototype": {

            "analytics_details": {
              "type":"boolean"
            }

          }
        }
      ]

    }

  },

  "template": [

    {
      "element":"div",
      "attributes": {
        "class":"input-box"
      },
      "children": [

        {
          "element":"label",
          "attributes": {
            "class":"label checkbox-click",
            "for":"component_analytics",
            "data-locale":"COMPONENT_ANALYTICS_LABEL"
          }
        },

        {
          "element":"input>",
          "label":"component_analytics",
          "attributes": {
            "type":"checkbox",
            "class":"input",
            "value":"component_analytics",
            "name":"component_analytics"
          }
        }

      ]
    },

    {
      "element":"div",
      "attributes": {
        "class":"component_analytics_details input-box hide margin-bottom"
      },
      "children": [

        {
          "element":"label",
          "attributes": {
            "class":"label checkbox-click second-level",
            "for":"component_analytics_details",
            "data-locale":"COMPONENT_ANALYTICS_DETAILS_LABEL"
          }
        },

        {
          "element":"input>",
          "label":"component_analytics_details",
          "attributes": {
            "type":"checkbox",
            "class":"input",
            "value":"component_analytics_details",
            "name":"component_analytics_details"
          }
        }

      ]
    },

    {
      "element":"span",
      "attributes": {
        "class":"info-text-outside",
        "data-locale":"COMPONENT_ANALYTICS_INFO"
      }
    }

  ]

}