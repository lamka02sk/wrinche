{

  "name":"thumbnail",
  "active":true,
  "defaultElements":true,
  "header":"component_header",

  "prototype": {

    "thumbnail": {
      "type":"string",

      "validate": {
        "source":"validator",
        "method":"isImage"
      }
    }

  },

  "template": [

    {
      "element":"div",
      "attributes": {
        "class":"input-box"
      },
      "children": [

        {
          "element":"button",
          "attributes": {
            "class":"button image_manager",
            "data-locale":"COMPONENT_THUMBNAIL_BUTTON",
            "data-manager":"images"
          }
        },

        {
          "element":"span",
          "attributes": {
            "class":"or",
            "data-locale":"OR"
          }
        },

        {
          "element":"input>",
          "attributes": {
            "type":"url",
            "data-placeholder":"COMPONENT_THUMBNAIL_INPUT",
            "class":"input full",
            "name":"component_thumbnail_input"
          }
        },

        {
          "element":"span",
          "attributes": {
            "class":"field-validation margin-bottom",
            "data-locale":""
          }
        },

        {
          "element":"span",
          "attributes": {
            "class":"info-text-outside",
            "data-locale":"COMPONENT_THUMBNAIL_INPUT_INFO"
          }
        }

      ]
    },

    {
      "element":"template",
      "attributes": {
        "id":"template_component_thumbnail_image"
      },
      "children": [

        {
          "element":"div",
          "attributes": {
            "class":"thumbnail-image",
            "data-path":""
          },
          "children": [

            {
              "element":"img",
              "attributes": {
                "class":"thumbnail-image-content",
                "src":"",
                "alt":""
              }
            },

            {
              "element":"p",
              "attributes": {
                "class":"thumbnail-name"
              }
            },

            {
              "element":"span",
              "attributes": {
                "class":"thumbnail-remove"
              }
            }

          ]
        }

      ]
    }

  ]

}