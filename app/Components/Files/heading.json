                {
                  "element":"span",
                  "attributes": {
                    "class":"heading-type",
                    "data-heading":"h3"
                  },
                  "text":"H3"
                },

                {
                  "element":"span",
                  "attributes": {
                    "class":"heading-type",
                    "data-heading":"h4"
                  },
                  "text":"H4"
                },

                {
                  "element":"span",
                  "attributes": {
                    "class":"heading-type",
                    "data-heading":"h5"
                  },
                  "text":"H5"
                },

                {
                  "element":"span",
                  "attributes": {
                    "class":"heading-type",
                    "data-heading":"h6"
                  },
                  "text":"H6"
                }

              ]
            }

          ]
        },

        {
          "element":"input>",
          "label":"component_inline_heading",
          "attributes": {
            "class":"big-input full h1 no-margin",
            "name":"component_inline_heading",
            "data-placeholder":"COMPONENT_CONTENT_HEADING_PLACEHOLDER"
          }
        }

      ]
    }

  ]

}