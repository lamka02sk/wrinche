{

  "name":"accessibility",
  "active":true,
  "defaultElements":true,

  "template": [

    {
      "element":"select",
      "label":"accessibility",
      "attributes": {
        "class":"selector-instance",
        "name":"write_accessibility_selector"
      },
      "children": [

          {
            "element":"option",
            "attributes": {
              "value":"0",
              "data-locale":"WRITE_ACCESSIBILITY_OPTION_PUBLIC"
            }
          },

        {
          "element":"option",
          "attributes": {
            "value":"1",
            "data-locale":"WRITE_ACCESSIBILITY_OPTION_PASSWORD"
          }
        },

        {
          "element":"option",
          "attributes": {
            "value":"2",
            "data-locale":"WRITE_ACCESSIBILITY_OPTION_PRIVATE"
          }
        }

      ]
    },

    {
      "element":"template",
      "attributes": {
        "id":"template_write_accessibility_password"
      },
      "children": [

        {
          "element":"label",
          "attributes": {
            "for":"accessibility-password-input",
            "class":"small-label",
            "data-locale":"WRITE_ACCESSIBILITY_PASSWORD_LABEL"
          }
        },

        {
          "element":"input>",
          "label":"accessibility-password-input",
          "attributes": {
            "class":"input",
            "type":"password",
            "name":"write_accessibility_password",
            "data-placeholder":"WRITE_ACCESSIBILITY_PASSWORD_PLACEHOLDER"
          }
        },

        {
          "element":"span",
          "attributes": {
            "class":"password-show-trigger",
            "data-action":"accessibility-password-input"
          }
        }

      ]
    }

  ]

}