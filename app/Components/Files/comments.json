{

  "name":"comments",
  "active":true,
  "defaultElements":true,
  "header":"component_header",

  "data": {

    "comments&comments_approve": [
      "articles.comments",
      "componentsHelper.mergeBooleans|componentsHelper.splitBooleans"
    ]

  },

  "prototype": {

    "comments": {
      "type":"boolean"
    },

    "comments_approve": {
      "type":"boolean"
    }

  },

  "template": [

    {
      "element":"div",
      "attributes": {
        "class":"input-box"
      },
      "children": [

        {
          "element":"label",
          "attributes": {
            "class":"label checkbox-click",
            "for":"component_comments_enable",
            "data-locale":"COMPONENT_COMMENTS_ENABLE_LABEL"
          }
        },

        {
          "element":"input>",
          "label":"component_comments_enable",
          "attributes": {
            "type":"checkbox",
            "class":"input",
            "value":"comments",
            "name":"component_comments"
          }
        }

      ]
    },

    {
      "element":"div",
      "attributes": {
        "class":"input-box component_comments_approve hide"
      },
      "children": [

        {
          "element":"label",
          "attributes": {
            "class":"label checkbox-click second-level",
            "for":"component_comments_approve",
            "data-locale":"COMPONENT_COMMENTS_APPROVE_LABEL"
          }
        },

        {
          "element":"input>",
          "label":"component_comments_approve",
          "attributes": {
            "type":"checkbox",
            "class":"input",
            "value":"component_comments_approve",
            "name":"component_comments_approve"
          }
        }

      ]
    }

  ]

}