{

  "name":"list",
  "active":true,
  "defaultElements":true,
  "header":"component_inline_header",

  "prototype": {

    "list": {
      "type":"array",
      "duplicates":"remove",

      "each": {
        "type":"string"
      }
    }

  },

  "template": [

    {
      "element":"label",
      "attributes": {
        "for":"component_inline_list_name",
        "class":"small-label",
        "data-locale":"COMPONENT_CONTENT_LIST_NAME_PLACEHOLDER"
      }
    },

    {
      "element":"input>",
      "label":"component_inline_list_name-name",
      "attributes": {
        "class":"input",
        "type":"text",
        "name":"component_inline_list_name",
        "data-placeholder":"COMPONENT_CONTENT_LIST_NAME_PLACEHOLDER"
      }
    },

    {
      "element":"input>",
      "attributes": {
        "class":"input add-item",
        "name":"component_inline_list_add",
        "type":"text",
        "data-placeholder":"COMPONENT_CONTENT_LIST_ADD"
      }
    },

    {
      "element":"template",
      "attributes": {
        "id":"template_component_content_list_item"
      },
      "children": [

        {
          "element":"div",
          "attributes": {
            "class":"list-item"
          },
          "children": [

            {
              "element":"input>",
              "attributes": {
                "class":"input",
                "name":"component_inline_list_item",
                "type":"checkbox",
                "value":"list-item-checked"
              }
            },

            {
              "element":"p",
              "attributes": {
                "class":"item-name"
              }
            },

            {
              "element":"span",
              "attributes": {
                "class":"list-item-edit"
              }
            },

            {
              "element":"span",
              "attributes": {
                "class":"list-item-remove"
              }
            }

          ]
        }

      ]
    }

  ]

}