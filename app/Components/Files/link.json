{

  "name":"link",
  "active":true,
  "defaultElements":true,
  "header":"component_inline_header",

  "prototype": {

    "link": {
      "type":"array",

      "children": {
        "url": {
          "type":"string",

          "validate": {
            "source":"validator",
            "method":"validateUrl"
          }
        },
        "name": {
          "type":"string"
        },
        "position": {
          "type":"integer",
          "range":"0,3"
        },
        "target": {
          "type":"integer",
          "range":"0,3"
        }
      }
    }

  },

  "template": [

    {
      "element":"label",
      "attributes": {
        "for":"component_inline_link_url",
        "class":"small-label",
        "data-locale":"COMPONENT_CONTENT_LINK_URL_LABEL"
      }
    },

    {
      "element":"input>",
      "label":"component_inline_link_url",
      "attributes": {
        "class":"input",
        "type":"url",
        "name":"component_inline_link_url",
        "data-placeholder":"COMPONENT_CONTENT_LINK_URL_PLACEHOLDER"
      }
    },

    {
      "element":"label",
      "attributes": {
        "class":"small-label",
        "for":"component_inline_link_name",
        "data-locale":"COMPONENT_CONTENT_LINK_TEXT_LABEL"
      }
    },

    {
      "element":"input>",
      "label":"component_inline_link_name",
      "attributes": {
        "class":"input",
        "type":"text",
        "name":"component_inline_link_name",
        "data-placeholder":"COMPONENT_CONTENT_LINK_TEXT_PLACEHOLDER"
      }
    },

    {
      "element":"div",
      "attributes": {
        "class":"link-position"
      },
      "children": [

        {
          "element":"span",
          "attributes": {
            "class":"position-item left-position",
            "data-position":"0",
            "data-locale":"COMPONENT_CONTENT_POSITION_LEFT"
          }
        },

        {
          "element":"span",
          "attributes": {
            "class":"position-item right-position",
            "data-position":"1",
            "data-locale":"COMPONENT_CONTENT_POSITION_RIGHT"
          }
        },

        {
          "element":"span",
          "attributes": {
            "class":"position-item full-position",
            "data-position":"2",
            "data-locale":"COMPONENT_CONTENT_POSITION_FULL"
          }
        }

      ]
    },

    {
      "element":"label",
      "attributes": {
        "class":"small-label",
        "for":"component_inline_link_target",
        "data-locale":"COMPONENT_CONTENT_LINK_TARGET_LABEL"
      }
    },

    {
      "element":"select",
      "label":"component_inline_link_target",
      "attributes": {
        "name":"component_inline_link_target",
        "class":"selector-instance"
      },
      "children": [

        {
          "element":"option",
          "attributes": {
            "selected":"true",
            "value":"0",
            "data-locale":"COMPONENT_CONTENT_LINK_TARGET_CURRENT"
          }
        },

        {
          "element":"option",
          "attributes": {
            "value":"1",
            "data-locale":"COMPONENT_CONTENT_LINK_TARGET_NEW-TAB"
          }
        },

        {
          "element":"option",
          "attributes": {
            "value":"2",
            "data-locale":"COMPONENT_CONTENT_LINK_TARGET_NEW-WINDOW"
          }
        }

      ]
    }

  ]

}